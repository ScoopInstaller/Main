{
    "homepage": "https://luarocks.org/",
    "description": "LuaRocks is the package manager for Lua modules.",
    "version": "3.3.1",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://luarocks.github.io/luarocks/releases/luarocks-3.3.1-windows-64.zip",
            "hash": "a69d6da50079f0f61491636b37e0fa3e0c0541530ebd9ef143606e533526d967",
            "extract_dir": "luarocks-3.3.1-windows-64"
        },
        "32bit": {
            "url": "https://luarocks.github.io/luarocks/releases/luarocks-3.3.1-windows-32.zip",
            "hash": "2f1fbdc79118155790bb7c459dc51f9832360b7268e328db777ab98ee7341a5a",
            "extract_dir": "luarocks-3.3.1-windows-32"
        }
    },
    "depends": "lua-windows",
    "bin": [
        "luarocks.exe",
        "luarocks-admin.exe"
    ],
    "post_install": [
        "$config = (luarocks config config_files.user.file)",
        "if (!(Test-Path \"$config\")) {",
        "    $configdir = Split-Path \"$config\"",
        "    if (!(Test-Path \"$configdir\")) { New-Item \"$configdir\" -ItemType 'directory' | Out-Null }",
        "    $luadir = $(versiondir lua-windows current $global) -Replace '\\\\', '/'",
        "\"variables = {",
        "  CC = \"\"gcc\"\";",
        "  LD = \"\"gcc\"\";",
        "  LUA_DIR = \"\"$luadir\"\";",
        "  LUA_BINDIR = \"\"$luadir\"\";",
        "}\" | Set-Content \"$config\" -Encoding oem",
        "}"
    ],
    "checkver": {
        "url": "https://luarocks.github.io/luarocks/releases/",
        "re": "luarocks-([\\d.]+)-windows-\\d{2}.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://luarocks.github.io/luarocks/releases/luarocks-$version-win32-64.zip"
            },
            "32bit": {
                "url": "https://luarocks.github.io/luarocks/releases/luarocks-$version-win32-32.zip"
            }
        }
    }
}