        ]
    ],
    "persist": [
        "vimfiles",
        "vimrc"
    ],
    "checkver": {
        "url": "https://ftp.nluug.nl/pub/vim/pc",
        "regex": "gvim(?<ver>[\\d-]+)\\.exe\\s+V([\\d.]+)"
    },
