{
    "homepage": "https://cmder.net",
    "description": "Portable console emulator for Windows.",
    "version": "1.3.11",
    "license": "MIT",
    "url": "https://github.com/cmderdev/cmder/releases/download/v1.3.11/cmder.zip",
    "hash": "588b8f811ca43ef13cb7f958dfff82d23dff4aa267f6bf57834250156da52809",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\vendor\\conemu-maximus5\\ConEmu.xml\")) {",
        "    Copy-Item \"$dir\\vendor\\ConEmu.xml.default\" \"$dir\\vendor\\conemu-maximus5\\ConEmu.xml\"",
        "}"
    ],
    "bin": "Cmder.exe",
    "shortcuts": [
        [
            "Cmder.exe",
            "Cmder"
        ]
    ],
    "persist": [
        "config",
        "vendor\\conemu-maximus5\\ConEmu.xml"
    ],
    "env_set": {
        "CMDER_ROOT": "$dir",
        "ConEmuDir": "$dir\\vendor\\conemu-maximus5"
    },
    "checkver": {
        "github": "https://github.com/cmderdev/cmder"
    },
    "autoupdate": {
        "url": "https://github.com/cmderdev/cmder/releases/download/v$version/cmder.zip",
        "hash": {
            "url": "$baseurl/hashes.txt",
            "regex": "$basename\\s+$sha256"
        }
    }
}
