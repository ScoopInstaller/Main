{
    "version": "5.2.1",
    "description": "A tool for managing OCI containers and pods.",
    "homepage": "https://podman.io/",
    "license": "Apache-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/containers/podman/releases/download/v5.2.1/podman-5.2.1-setup.exe",
            "hash": "aa6aaed139fed459313a630b30934b073e13b4a13e3fe52d255d2503daa19206"
        }
    },
    "bin": "podman.exe",
    "installer": {
        "script": [
            "Expand-DarkArchive \"$dir\\podman-$version-setup.exe\" \"$dir\\_tmp\" -Removal",
            "if (Test-Path \"$dir\\_tmp\\AttachedContainer\\a0\") {Rename-Item \"$dir\\_tmp\\AttachedContainer\\a0\" 'podman.msi'}",
            "Expand-MsiArchive \"$dir\\_tmp\\AttachedContainer\\podman.msi\" \"$dir\" -ExtractDir 'PFiles64\\RedHat\\Podman'"
        ]
    },
    "checkver": {
        "github": "https://github.com/containers/podman"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/containers/podman/releases/download/v$version/podman-$version-setup.exe",
                "hash": {
                    "url": "$baseurl/shasums"
                }
            }
        }
    }
}
