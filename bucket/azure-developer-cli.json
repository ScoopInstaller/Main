{
    "version": "1.23.4",
    "description": "A developer CLI that provides commands for working with Azure resources that map to key workflow stages: code, build, deploy, monitor, repeat.",
    "homepage": "https://aka.ms/azd",
    "license": "MIT",
    "notes": [
        "1. Shell completion requires additional setup, see: https://github.com/Azure/azure-dev",
        "2. Telemetry is enabled by default, it can be disabled by setting env variable \"AZURE_DEV_COLLECT_TELEMETRY\" to \"no\""
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Azure/azure-dev/releases/download/azure-dev-cli_1.23.4/azd-windows-amd64.zip",
            "hash": "b412246d12ebf0fd872e1213f9b8b54c6052057c2375b5302f214fd829dbfd45"
        },
        "arm64": {
            "url": "https://github.com/Azure/azure-dev/releases/download/azure-dev-cli_1.23.4/azd-windows-arm64-alpha.zip",
            "hash": "12af0a4d42d572f7c67fd4034f56e2b4ab4247e60fb74e1f71f00661742df524"
        }
    },
    "pre_install": "Get-Item \"$dir\\azd-*.exe\" | Rename-Item -NewName \"azd.exe\"",
    "bin": "azd.exe",
    "post_uninstall": [
        "if ($purge) {",
        "    $Directories = [string[]](",
        "        [System.IO.Path]::Combine($env:USERPROFILE,'.azd')",
        "    )",
        "    $Directories.ForEach{",
        "        if ([System.IO.Directory]::Exists($_)) {",
        "            $null = [System.IO.Directory]::Delete($_,$true)",
        "        }",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/Azure/azure-dev",
        "regex": "azure-dev-cli_([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Azure/azure-dev/releases/download/azure-dev-cli_$version/azd-windows-amd64.zip"
            },
            "arm64": {
                "url": "https://github.com/Azure/azure-dev/releases/download/azure-dev-cli_$version/azd-windows-arm64-alpha.zip"
            }
        }
    }
}
