{
    "homepage": "https://bazel.build",
    "description": "A fast, scalable, multi-language and extensible build system",
    "version": "0.29.0",
    "license": "Apache-2.0",
    "bin": "bazel.exe",
    "suggest": {
        "MSYS2": "msys2",
        "Python27": "versions/python27",
        "curl": "curl"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/bazelbuild/bazel/releases/download/0.29.0/bazel-0.29.0-windows-x86_64.zip",
            "hash": "f5dec9af35d5f5e3e16b64679bde836f63ca6307055639c5148b0efdf1f8c363"
        }
    },
    "checkver": {
        "github": "https://github.com/bazelbuild/bazel"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/bazelbuild/bazel/releases/download/$version/bazel-$version-windows-x86_64.zip"
            }
        },
        "hash": {
            "mode": "extract",
            "url": "$url.sha256"
        }
    },
    "env_set": {
        "BAZEL_SH": "$(appdir msys2 $global)\\current\\usr\\bin\\bash.exe"
    }
}
