        "}"
    ],
    "bin": "dnscrypt-proxy.exe",
    "persist": [
        "blacklist.txt",
        "cloaking-rules.txt",
        "dnscrypt-proxy.toml",
        "forwarding-rules.txt",
        "localhost.pem",
        "whitelist.txt"
    ],
    "checkver": {
        "github": "https://github.com/DNSCrypt/dnscrypt-proxy"
