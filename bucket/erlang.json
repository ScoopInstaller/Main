        "ERLANG_HOME": "$dir"
    },
    "checkver": {
        "url": "https://erlang.org/download/otp_versions_tree_app_vsns.html",
        "regex": "otp_win64_([\\d.]+)\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "http://erlang.org/download/otp_win64_$version.exe#/dl.7z"
