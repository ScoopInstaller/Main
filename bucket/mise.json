            "hash": "c0a61c22e69eb6e91a68b6b4e340192c19625b3ea814e38ed4201891b842c2dd"
        },
        "arm64": {
            "url": "https://github.com/jdx/mise/releases/download/v2025.3.11/mise-v2025.3.11-windows-arm64.zip",
