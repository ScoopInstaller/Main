{
    "version": "2025.1.13",
    "description": "Polyglot tool version manager and task runner",
    "homepage": "https://mise.jdx.dev/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/jdx/mise/releases/download/v2025.1.13/mise-v2025.1.13-windows-x64.zip",
            "hash": "add8b79589fbd29853d5f0a42813f3ddd4bbbfbde6a759195527f6db1d460cd0"
        },
        "arm64": {
            "url": "https://github.com/jdx/mise/releases/download/v2025.1.13/mise-v2025.1.13-windows-arm64.zip",
            "hash": "24c70cff027557ec4e8377d659b423671952b9cbcdd23565b811e43cb6588297"
        }
    },
    "extract_dir": "mise",
    "bin": "bin/mise.exe",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config.toml\") -and !(Test-Path \"$dir\\config.toml\")) {",
        "    Write-Warning -wa 2 \"This manifest does not currently migrate any previous mise installations!`n`nSuggested:`n * Backup existing config.toml before fully uninstalling mise as documented.`n * Install with scoop then manually add the backed up options to the new config.toml that scoop now manages in persist\"",
        "    New-Item -Path \"$dir\\config.toml\" -ItemType File -ea 0 | Out-Null",
        "}"
    ],
    "env_set": {
        "MISE_DATA_DIR": "$dir\\mise",
        "MISE_GLOBAL_CONFIG_FILE": "$dir\\config.toml"
    },
    "env_add_path": "mise\\shims",
    "persist": [
        "mise",
        "config.toml"
    ],
    "notes": "See documentation for notes on configuring your shell: https://mise.jdx.dev/installing-mise.html",
    "checkver": {
        "github": "https://github.com/jdx/mise"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jdx/mise/releases/download/v$version/mise-v$version-windows-x64.zip"
            },
            "arm64": {
                "url": "https://github.com/jdx/mise/releases/download/v$version/mise-v$version-windows-arm64.zip"
            }
        },
        "hash": {
            "url": "$baseurl/SHASUMS256.txt"
        }
    }
}
