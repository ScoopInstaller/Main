                "url": "https://github.com/helm/chart-testing/releases/download/v$version/chart-testing_$version_windows_arm64.zip"
            }
        },
        "hash": {
            "url": "$baseurl/checksums.txt",
            "regex": "(?im)^$sha256\\s+$basename$"
        }
    }
