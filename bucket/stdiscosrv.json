{
    "version": "2.0.3",
    "description": "The Syncthing global discovery server",
    "homepage": "https://syncthing.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/discosrv/releases/download/v2.0.3/stdiscosrv-windows-amd64-v2.0.3.zip",
            "hash": "9930928f13936cffc86375619d28ab9b0c973391c39c6de7f1cf99a66323ce8d",
            "extract_dir": "stdiscosrv-windows-amd64-v2.0.3"
        },
        "32bit": {
            "url": "https://github.com/syncthing/discosrv/releases/download/v2.0.3/stdiscosrv-windows-386-v2.0.3.zip",
            "hash": "73228a721904f716e49dcd140d0f0fff572fb76334a19399206bca1fb8201391",
            "extract_dir": "stdiscosrv-windows-386-v2.0.3"
        }
    },
    "bin": [
        [
            "stdiscosrv.exe",
            "stdiscosrv",
            "-cert \"$dir\\cert.pem\"",
            "-db-dir \"$dir\\discovery.db\"",
            "-key \"$dir\\key.pem\""
        ]
    ],
    "persist": [
        "discovery.db",
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/discosrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/discosrv/releases/download/v$version/stdiscosrv-windows-amd64-v$version.zip",
                "extract_dir": "stdiscosrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/discosrv/releases/download/v$version/stdiscosrv-windows-386-v$version.zip",
                "extract_dir": "stdiscosrv-windows-386-v$version"
            }
        }
    }
}
