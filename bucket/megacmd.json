{
    "version": "1.6.3",
    "description": "Manage MEGA.nz account and files from command line.",
    "homepage": "https://mega.nz/cmd",
    "license": {
        "identifier": "Freeware",
        "url": "https://github.com/meganz/MEGAcmd/blob/master/LICENSE"
