{
    "homepage": "https://bazel.build",
    "version": "0.19.2",
    "license": "Apache-2.0",
    "bin": "bazel.exe",
    "suggest": {
        "MSYS2": "msys2",
        "Python27": "versions/python27",
        "curl": "curl"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/bazelbuild/bazel/releases/download/0.19.2/bazel-0.19.2-windows-x86_64.zip",
            "hash": "64b14350ed0de786a68aea2d1f9651904404e247e91b79609ed78fc8ae390845"
        }
    },
    "checkver": {
        "github": "https://github.com/bazelbuild/bazel"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/bazelbuild/bazel/releases/download/$version/bazel-$version-windows-x86_64.zip"
            }
        },
        "hash": {
            "mode": "extract",
            "url": "$url.sha256"
        }
    },
    "env_set": {
        "BAZEL_SH": "$(appdir msys2)\\current\\usr\\bin\\bash.exe"
    }
}
